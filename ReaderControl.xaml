<UserControl x:Class="SpeedwayClientWpf.ReaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="DarkGray">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}" Grid.Column="0" Margin="5"/>
            <TextBlock Text="IP address" Grid.Column="1" Margin="5"/>
            <TextBox Text="{Binding IpAddress}" Grid.Column="2" Margin="5"/>
            <TextBlock Text="Port" Grid.Column="3" Margin="5"/>
            <TextBox Text="{Binding Port}" Grid.Column="4" Margin="5" Width="70"/>
            <Button Content="Connect" Command="{Binding ConnectCommand}" Grid.Column="5" Margin="5" Width="70"/>
        </Grid>
    </Border>
</UserControl>

    